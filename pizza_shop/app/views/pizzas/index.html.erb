<h1>All of Joe's Pizzas</h1>
<div class="row">
     <% @pizzas.each do |pizza| %>
  <div class = "col-sm-6 col-md-4">
    <div class = "thumbnail">
      <img src = "<%= pizza.image %>">
      <div class = "caption">
        <h3><%=pizza.name %></h3>
        <h3>Cost: $<%= pizza.cost %></h3>
        <%= link_to "More info", pizza, class: "btn btn-default" %>
      </div>
    </div>
  </div>
    <% end %>
</div>
<br>
      
      <%= link_to "New Pizza", new_pizza_path, class: "btn-primary" %>
    
